<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="125sp"
        android:src="@drawable/onesignal_square"
        />
    
    <Button
        android:id="@+id/myButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/hello" />
    
    <Switch
        android:layout_width="match_parent"
        android:layout_height="39.5dp"
        android:id="@+id/consentSwitch"
        android:text="@string/consent_switch" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textFontWeight="3"
        android:paddingTop="15sp"
        android:text="@string/header_1"/>

    <LinearLayout
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:baselineAligned="false"
        android:layout_height="wrap_content">

        <Button
            android:text="@string/initialize"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".30"
            android:id="@+id/initializeButton" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".70"
            android:id="@+id/appID"
            android:hint="@string/app_id" />

    </LinearLayout>

    <LinearLayout
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:baselineAligned="false"
        android:layout_height="wrap_content">

        <Switch
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:paddingRight="15dp"
            android:id="@+id/toggleRequireConsent"
            android:text="@string/toggle_require_consent" />

        <Switch
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:paddingLeft="15dp"
            android:id="@+id/toggleProvideConsent"
            android:text="@string/toggle_provide_consent" />

    </LinearLayout>

    <LinearLayout
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:baselineAligned="false"
        android:layout_height="wrap_content">

        <Button
            android:text="@string/toggle_log_level"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".30"
            android:id="@+id/toggleLogLevel" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".20"
            android:id="@+id/logLevelText"
            android:text="@string/log_level" />

        <Button
            android:text="@string/toggle_alert_level"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".30"
            android:id="@+id/toggleAlertLevel" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".20"
            android:id="@+id/alertLevelText"
            android:text="@string/alert_level" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textFontWeight="3"
        android:paddingTop="15sp"
        android:text="@string/header_2"/>

    <LinearLayout
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:baselineAligned="false"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".50"
            android:id="@+id/externalIdField"
            android:hint="@string/edit_external_id" />
    
        <Button
            android:text="@string/set_external_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:id="@+id/setExternalIdButton" />
    
        <Button
            android:text="@string/remove_external_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:id="@+id/removeExternalIdButton" />

    </LinearLayout>

    <LinearLayout
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:baselineAligned="false"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".50"
            android:id="@+id/smsNumberField"
            android:hint="@string/edit_sms_number" />
    
        <Button
            android:text="@string/set_sms_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:id="@+id/setSmsNumberButton" />
    
        <Button
            android:text="@string/remove_sms_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:id="@+id/removeSmsNumberButton" />

    </LinearLayout>

    <LinearLayout
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:baselineAligned="false"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".50"
            android:id="@+id/emailIdField"
            android:hint="@string/edit_email_id" />
    
        <Button
            android:text="@string/set_email_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:id="@+id/setEmailIdButton" />
    
        <Button
            android:text="@string/remove_email_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:id="@+id/removeEmailIdButton" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textFontWeight="3"
        android:paddingTop="15sp"
        android:text="@string/header_3"/>

    <LinearLayout
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:baselineAligned="false"
        android:layout_height="wrap_content">

        <Button
            android:text="@string/permission_prompt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".33"
            android:id="@+id/permissionPrompt" />
    
        <Button
            android:text="@string/send_push_to_self"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".33"
            android:id="@+id/sendPushToSelf" />
    
        <Button
            android:text="@string/clear_notifications"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".33"
            android:id="@+id/clearNotifications" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textFontWeight="3"
        android:paddingTop="15sp"
        android:text="@string/header_4"/>

    <LinearLayout
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:baselineAligned="false"
        android:layout_height="wrap_content">

        <Button
            android:text="@string/get_all_triggers"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".50"
            android:id="@+id/getAllTriggers" />
    
        <Button
            android:text="@string/pause_iam"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".50"
            android:id="@+id/PauseIAM" />

    </LinearLayout>

    <LinearLayout
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:baselineAligned="false"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".50"
            android:id="@+id/editTrigger"
            android:hint="@string/edit_trigger" />
    
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".50"
            android:id="@+id/editTriggerValue"
            android:hint="@string/edit_trigger_value" />

    </LinearLayout>

